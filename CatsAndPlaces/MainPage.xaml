<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatsAndPlaces.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Country"/>
            <Entry x:Name="Country"  Text="PL"/>

            <Label Text="Postal Code"/>
            <Entry x:Name="postalCode" Text="22-400"/>

            <Button
                x:Name="CounterBtn"
                Text="Wystalkij siebie!" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="PostalCode"
                HorizontalOptions="Fill" />
            <Label x:Name="TheWholePlace"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
